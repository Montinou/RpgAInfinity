# ============================================================================
# RpgAInfinity Environment Variables Example
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# ============================================================================
# AI SERVICE CONFIGURATION (Google Gemini)
# ============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=AIzaSy_your_key_here

# Legacy Claude API key (deprecated - for backward compatibility only)
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# ============================================================================
# VERCEL KV DATABASE (Redis-compatible)
# ============================================================================
# These are automatically set by Vercel in production
# For local development, get these from your Vercel dashboard
KV_URL=redis://localhost:6379
KV_REST_API_URL=https://your-project-kv.vercel-storage.com
KV_REST_API_TOKEN=your-kv-token-here

# ============================================================================
# VERCEL BLOB STORAGE (for assets)
# ============================================================================
# For storing generated images, assets, and user uploads
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your-token-here

# ============================================================================
# NEXT.JS PUBLIC ENVIRONMENT VARIABLES
# ============================================================================
# These are exposed to the browser and should not contain secrets
NEXT_PUBLIC_APP_NAME=RpgAInfinity
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app
NEXT_PUBLIC_VERCEL_ENV=development

# ============================================================================
# AUTHENTICATION (Future - NextAuth.js)
# ============================================================================
# Uncomment when implementing auth system
# NEXTAUTH_SECRET=your-super-secret-key-here
# NEXTAUTH_URL=https://your-app.vercel.app
# 
# # OAuth Providers
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# DISCORD_CLIENT_ID=your-discord-client-id
# DISCORD_CLIENT_SECRET=your-discord-client-secret

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================
# Error tracking
# SENTRY_DSN=https://your-sentry-dsn-here

# Analytics
# VERCEL_ANALYTICS_ID=your-analytics-id-here

# Google Analytics (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================
# Set to "true" to enable debug logging
DEBUG=false

# Bundle analyzer (set to "true" to analyze bundle size)
ANALYZE=false

# Skip build-time TypeScript and ESLint checks (not recommended)
# SKIP_TYPE_CHECK=false
# SKIP_LINT_CHECK=false

# ============================================================================
# RATE LIMITING & SECURITY
# ============================================================================
# API rate limits (requests per minute)
API_RATE_LIMIT_RPM=100
AI_RATE_LIMIT_RPM=10

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable features during development
FEATURE_MULTIPLAYER=true
FEATURE_VOICE_ACTING=false
FEATURE_ANALYTICS=true
FEATURE_AI_STREAMING=true

# ============================================================================
# GAME CONFIGURATION
# ============================================================================
# Default game settings
DEFAULT_GAME_DURATION_MINUTES=60
MAX_PLAYERS_PER_GAME=8
MAX_CONCURRENT_GAMES=10

# AI Generation settings
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7
AI_RESPONSE_TIMEOUT_SECONDS=30

# ============================================================================
# TESTING
# ============================================================================
# Test database URLs (if different from main)
# TEST_KV_URL=redis://localhost:6380
# TEST_ANTHROPIC_API_KEY=sk-ant-test-key-here

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================
# Region preference for Vercel functions
# VERCEL_REGION=iad1

# Function timeouts (seconds)
# FUNCTION_TIMEOUT_AI=30
# FUNCTION_TIMEOUT_GAME=10

# Memory allocation (MB)
# FUNCTION_MEMORY_AI=1024
# FUNCTION_MEMORY_GAME=512