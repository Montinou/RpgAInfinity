# ============================================
# REQUIRED: Anthropic Claude API
# ============================================
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ============================================
# OPTIONAL: Vercel KV (Redis) for data persistence
# ============================================
# Create a KV database in your Vercel dashboard
KV_URL=redis://default:XXXXXXXXXXXXXXXX@XXXXXXXX.kv.vercel-storage.com:XXXXX
KV_REST_API_URL=https://XXXXXXXX.kv.vercel-storage.com
KV_REST_API_TOKEN=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ============================================
# OPTIONAL: Vercel Blob for file storage
# ============================================
# Create a Blob store in your Vercel dashboard
BLOB_READ_WRITE_TOKEN=vercel_blob_XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ============================================
# Application Configuration
# ============================================
# Public URL of your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application name
NEXT_PUBLIC_APP_NAME=RpgAInfinity

# Application version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment
NODE_ENV=development

# ============================================
# OPTIONAL: Analytics & Monitoring
# ============================================
# Vercel Analytics (auto-configured when deployed)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# PostHog for product analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# OPTIONAL: Feature Flags
# ============================================
NEXT_PUBLIC_ENABLE_MULTIPLAYER=false
NEXT_PUBLIC_ENABLE_VOICE=false
NEXT_PUBLIC_ENABLE_MARKETPLACE=false
NEXT_PUBLIC_ENABLE_MOBILE=false

# ============================================
# OPTIONAL: Rate Limiting
# ============================================
# Max API requests per minute
RATE_LIMIT_MAX=60

# Max AI generations per hour
AI_RATE_LIMIT_MAX=100

# ============================================
# OPTIONAL: Game Configuration
# ============================================
# Default game settings
DEFAULT_GAME_DURATION=20
DEFAULT_MAX_PLAYERS=8
DEFAULT_MIN_PLAYERS=3

# AI Configuration
AI_MODEL=claude-3-opus-20240229
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Cache TTL in seconds
CACHE_TTL=3600

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Enable debug mode
DEBUG=false

# Mock AI responses (for testing without API)
MOCK_AI=false

# Disable rate limiting in development
DISABLE_RATE_LIMIT=true